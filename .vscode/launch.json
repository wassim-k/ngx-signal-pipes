  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test File",
      "program": "${workspaceFolder}/node_modules/.bin/ng",
      "args": [
        "test",
        "--test-match=\"**/${relativeFile}\"",
        "--run-in-band",
        "--no-cache"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "windows": {
        "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
      }
    }
  ]
}
